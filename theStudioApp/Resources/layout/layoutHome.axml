<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="25px"
        android:minHeight="25px">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/studioLogo" />
        <TextView
            android:id="@+id/title_home"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="@string/title_home"
            android:textSize="32sp" />
        <TextView
            android:id="@+id/loremIpsum"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="@string/loremIpsum" />
        <TextView
            android:id="@+id/loremIpsum1"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="@string/loremIpsum1" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/studioWelcome" />
        <TextView
            android:id="@+id/loremIpsum2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/loremIpsum2" />
        <TextView
            android:id="@+id/loremIpsum3"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="@string/loremIpsum3" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/studioMacSuite" />
        <TextView
            android:id="@+id/loremIpsum4"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="@string/loremIpsum4" />
    </LinearLayout>
</ScrollView>